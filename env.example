# Minneslund - Environment Variables Example
# Copy this file to .env.local and fill in your actual values

# === Sanity CMS Configuration ===
# Required for production deployment
NEXT_PUBLIC_SANITY_PROJECT_ID=your-sanity-project-id
NEXT_PUBLIC_SANITY_DATASET=production
NEXT_PUBLIC_SANITY_API_VERSION=2024-01-01

# Required for write operations (creating/updating content)
# Create a token with Editor permissions in your Sanity project settings
SANITY_API_TOKEN=skxxxxxxxxxxxxxxxxxx

# Optional: Custom studio URL
NEXT_PUBLIC_SANITY_STUDIO_URL=/studio

# === App Configuration ===
NEXT_PUBLIC_APP_URL=http://localhost:3000

# === NextAuth Configuration ===
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-nextauth-key-minimum-32-characters

# === OAuth Providers ===
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# === Database ===
DATABASE_URL=postgresql://username:password@localhost:5432/minneslund

# === Redis Configuration (Optional - for production scalability) ===
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379
# OR individual settings:
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# === Security Configuration ===
NEXT_PUBLIC_SITE_URL=https://yourdomain.com

# === Feature Flags ===
NEXT_PUBLIC_GUESTBOOK_ENABLED=true
GUESTBOOK_REQUIRE_APPROVAL=true
GUESTBOOK_MAX_MESSAGE_LENGTH=500
GUESTBOOK_PROFANITY_FILTER=true

NEXT_PUBLIC_NFC_ENABLED=true
NEXT_PUBLIC_MAPS_ENABLED=true

# === Rate Limiting ===
RATE_LIMIT_GUESTBOOK_WINDOW=900000
RATE_LIMIT_GUESTBOOK_MAX=5
RATE_LIMIT_MEMORIAL_WINDOW=3600000
RATE_LIMIT_MEMORIAL_MAX=3

# === Email Configuration (Optional) ===
EMAIL_ENABLED=false
EMAIL_PROVIDER=resend
EMAIL_FROM=noreply@yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxx

# === Payment Processing (Optional) ===
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxx
STRIPE_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxx

# === Security ===
JWT_SECRET=your-super-secret-jwt-key
BCRYPT_ROUNDS=12
SESSION_TIMEOUT=86400000

# === Performance ===
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# === Cache Configuration ===
CACHE_DEFAULT_TTL=300

# === File Upload ===
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp
ALLOWED_VIDEO_TYPES=mp4,mov,avi
ALLOWED_AUDIO_TYPES=mp3,wav,m4a 