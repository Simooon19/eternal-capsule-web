{
  "name": "environmental-saas-project",
  "version": "0.1.0",
  "description": "Digital memorial platform - Production deployed on Vercel",
  "homepage": "https://eternal-capsule-alfjhbvch-simon-anderssons-projects-8e7f4176.vercel.app",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "postinstall": "prisma generate",
    "build:analyze": "ANALYZE=true next build",
    "export": "next export",
    "validate": "npm run type-check && npm run lint && npm run test",
    "validate:full": "npm run type-check && npm run lint && npm run test && npm run test:e2e",
    "dev:all": "npm run dev & npx prisma studio",
    "setup": "npm install && npx prisma generate && npm run validate",
    "prepare": "husky",
    "clean": "rm -rf .next node_modules/.cache dist coverage test-results",
    "reset": "npm run clean && npm install && npm run setup"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.9.1",
    "@portabletext/react": "^3.0.11",
    "@prisma/client": "^6.10.0",
    "@sanity/client": "6.29.1",
    "@sanity/icons": "3.7.4",
    "@sanity/image-url": "^1.0.2",
    "@sanity/ui": "^2.16.2",
    "@sanity/vision": "^3.29.1",
    "@sentry/nextjs": "^9.30.0",
    "@stripe/stripe-js": "^7.3.1",
    "@types/leaflet": "^1.9.18",
    "@types/redis": "^4.0.10",
    "bcryptjs": "^3.0.2",
    "critters": "^0.0.25",
    "framer-motion": "10.16.4",
    "groq": "^3.0.0",
    "jose": "^6.0.11",
    "jszip": "^3.10.1",
    "leaflet": "^1.9.4",
    "leaflet-defaulticon-compatibility": "^0.1.2",
    "next": "14.1.0",
    "next-auth": "^4.24.11",
    "next-sanity": "^7.1.4",
    "prisma": "^6.10.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "4.2.1",
    "redis": "^4.6.10",
    "resend": "^4.6.0",
    "sanity": "^3.29.1",
    "stripe": "^18.2.1",
    "styled-components": "^6.1.8",
    "zod": "^3.25.7"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.1.0",
    "@playwright/test": "^1.41.2",
    "@testing-library/jest-dom": "^6.4.2",
    "@testing-library/react": "^14.2.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.19",
    "@types/react": "^18.2.57",
    "@types/react-dom": "^18.2.19",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-next": "14.1.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.3.3",
    "husky": "^9.0.11"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": {
            "jsx": "react-jsx"
          }
        }
      ],
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@/components/(.*)$": "<rootDir>/src/components/$1",
      "^@/lib/(.*)$": "<rootDir>/src/lib/$1",
      "^@/types/(.*)$": "<rootDir>/src/types/$1"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{ts,tsx,js}",
      "<rootDir>/src/**/*.{test,spec}.{ts,tsx,js}"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/tests/e2e/",
      "<rootDir>/node_modules/"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.tsx",
      "!src/app/layout.tsx"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    }
  }
}
